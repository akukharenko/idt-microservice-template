{
  "HealthCheckOptions": {
    "HealthCheckUiEnabled": true,
    "HeaderText": "Simple Service - Health Checks Status",
    "EvaluationTimeInSeconds": 60,
    "MaximumHistoryEntriesPerEndpoint": 240
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "=> {Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message} [{MachineName} ({EnvironmentUserName})]<{ThreadId}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName"],
    "Properties": {
      "Application": "IDT.Boss.ServiceName.Api"
    }
  }
}
