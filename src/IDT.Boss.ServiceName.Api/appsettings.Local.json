{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "=> {Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message} [{MachineName} ({EnvironmentUserName})]<{ThreadId}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Logs\\IDT.Boss.ServiceName.Api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "shared": true,
          "outputTemplate": "{Timestamp} [{Level}] {Message} [{MachineName} ({EnvironmentUserName})]<{ThreadId}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "path": "D:\\Logs\\IDT.Boss.ServiceName.Api-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "shared": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName"],
    "Properties": {
      "Application": "IDT.Boss.ServiceName.Api"
    }
  }
}
